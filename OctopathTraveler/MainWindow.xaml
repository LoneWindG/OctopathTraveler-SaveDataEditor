<Window x:Class="OctopathTraveler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OctopathTraveler"
        xmlns:properties="clr-namespace:OctopathTraveler.Properties"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.MainWindowTitle}" Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True" Drop="Window_Drop" PreviewDragOver="Window_PreviewDragOver">

    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="{x:Static properties:Resources.MenuFile}">
                    <MenuItem Header="{x:Static properties:Resources.MenuFileOpen}" Click="MenuItemFileOpen_Click"/>
                    <MenuItem Header="{x:Static properties:Resources.MenuFileSave}" Click="MenuItemFileSave_Click"/>
                    <MenuItem Header="{x:Static properties:Resources.MenuFileSaveAs}" Click="MenuItemFileSaveAs_Click"/>
                    <MenuItem Header="{x:Static properties:Resources.MenuFileSaveAsJson}" Click="MenuItemFileSaveAsJson_Click"/>
                    <MenuItem Header="{x:Static properties:Resources.MenuExportInfoExcel}" Click="MenuItemExportInfoExcel_Click"/>
                    <MenuItem Header="{x:Static properties:Resources.MenuExportExampleSaveFile}" Click="MenuExportExampleSaveFile_Click"/>
                    <Separator/>
                    <MenuItem Header="{x:Static properties:Resources.MenuExit}" Click="MenuItemExit_Click"/>
                </MenuItem>
                <MenuItem Header="{x:Static properties:Resources.MenuLanguage}" Name="MenuItemLanguage"/>
                <MenuItem Header="{x:Static properties:Resources.MenuAbout}" Click="MenuItemAbout_Click"/>
            </Menu>
            <ToolBar DockPanel.Dock="Top">
                <Button Width="32" Height="32" Click="ToolBarFileOpen_Click" ToolTip="{x:Static properties:Resources.ToolTipOpen}">
                    <Image Source="/Resource/Open.png"/>
                </Button>
                <Button Width="32" Height="32" Click="ToolBarFileSave_Click" ToolTip="{x:Static properties:Resources.ToolTipSave}">
                    <Image Source="/Resource/Save.png"/>
                </Button>
                <Button Width="32" Height="32" Click="MenuItemFileSaveAsJson_Click" ToolTip="{x:Static properties:Resources.ToolTipSaveAsJson}">
                    <Image Source="/Resource/SaveAsJson.png"/>
                </Button>
                <Button Width="32" Height="32" Click="ToolBarConvertToJson_Click" ToolTip="{x:Static properties:Resources.ToolTipConvert}" >
                    <Image Source="/Resource/Convert.png"/>
                </Button>
                <Label Content="{Binding Info.LoadedInfoFile}" VerticalAlignment="Center"/>
            </ToolBar>
            <TabControl>
                <TabItem Header="{x:Static properties:Resources.TabItemBasic}">
                    <TabItem.Resources>
                        <local:HeroIDConverter x:Key="HeroIDConverter"/>
                    </TabItem.Resources>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="65"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="{x:Static properties:Resources.BasicPlayTime}" VerticalAlignment="Center"/>
                        <Label Grid.Row="1" Content="{x:Static properties:Resources.BasicSaveDate}" VerticalAlignment="Center"/>
                        <Label Grid.Row="2" Content="{x:Static properties:Resources.BasicMoney}" VerticalAlignment="Center"/>
                        <Label Grid.Row="3" Content="{x:Static properties:Resources.BasicHero}" VerticalAlignment="Center"/>
                        <Label Grid.Row="4" VerticalAlignment="Bottom">
                            <TextBlock FontSize="18" TextWrapping="Wrap" Text="{x:Static properties:Resources.BasicAchievementProgress}"/>
                        </Label>
                        <Label Grid.Row="5" Content="{x:Static properties:Resources.BasicBattleCount}" VerticalAlignment="Center"/>
                        <Label Grid.Row="6" Content="{x:Static properties:Resources.BasicEscapeCount}" VerticalAlignment="Center"/>
                        <Label Grid.Row="7" Content="{x:Static properties:Resources.BasicTreasureCount}" VerticalAlignment="Center"/>
                        <Label Grid.Row="8" Content="{x:Static properties:Resources.BasicHiddenPointCount}"  VerticalAlignment="Center"/>
                        <Label Grid.Row="9" Content="{x:Static properties:Resources.BasicItemFlag}" VerticalAlignment="Center"/>
                        <Label Grid.Row="0" Grid.Column="1" Content="{Binding BasicData.PlayTime}" Margin="-3,0,0,0" VerticalAlignment="Center"/>
                        <Label Grid.Row="1" Grid.Column="1" Content="{Binding BasicData.SaveDate}" Margin="-3,0,0,0" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding BasicData.Money, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Info.CharaNames}" DisplayMemberPath="Name" VerticalContentAlignment="Center"
                                  SelectedIndex="{Binding BasicData.Hero, Converter={StaticResource HeroIDConverter}}"/>
                        <Label Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="-3,0,0,0" VerticalContentAlignment="Bottom">
                            <TextBlock TextWrapping="WrapWithOverflow" Text="{x:Static properties:Resources.BasicAchievementTip}"/>
                        </Label>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding BasicData.BattleCount, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center" IsEnabled="{Binding BasicData.IsExistBattleCount}"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding BasicData.EscapeCount, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center" IsEnabled="{Binding BasicData.IsExistEscapeCount}"/>
                        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding BasicData.TreasureCount, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center" IsEnabled="{Binding BasicData.IsExistTreasureCount}"/>
                        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding BasicData.HiddenPointCount, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center" IsEnabled="{Binding BasicData.IsExistHiddenPointCount}"/>
                        <Button Grid.Row="9" Grid.Column="1" Content="==>" Click="ButtonGotoItemInventory_Click"/>
                    </Grid>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemCharacter}" Height="19" VerticalAlignment="Top">
                    <Grid>
                        <Grid.Resources>
                            <local:CharactorNameConverter x:Key="CharactorNameConverter"/>
                            <local:CharactorJobConverter x:Key="CharactorJobConverter"/>
                            <local:CharactorEquipmentConverter x:Key="CharactorEquipmentConverter"/>
                            <local:PartyMemberConverter x:Key="PartyMemberConverter"/>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ListBox Grid.Row="0" Name="CharactorList" ItemsSource="{Binding Charactors}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Label FontSize="12" Content="{Binding ID, Converter={StaticResource CharactorNameConverter}}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <ListView Grid.Row="1" Height="180" ItemsSource="{Binding MainParty}"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListView.Resources>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="IsHitTestVisible" Value="False"/>
                                    </Style>
                                    <Style TargetType="ListViewItem">
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.Resources>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="{x:Static properties:Resources.TabItemParty}" Width="194">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <ComboBox Width="180" Height="25" FontSize="12" VerticalContentAlignment="Center"
                                                              ItemsSource="{Binding Path=DataContext.Info.CharaNames, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:MainWindow}}"
                                                              DisplayMemberPath="Name" SelectedIndex="{Binding ID, Converter={StaticResource PartyMemberConverter}}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Content="Lv"/>
                            <TextBox Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.Lv, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="1" Content="Exp"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.Exp, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="2" Content="RawHP"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.RawHP, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="3" Content="RawMP"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.RawMP, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="4" Content="FirstJob"/>
                            <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding Info.Jobs}" DisplayMemberPath="Name" IsEnabled="False"
                                      SelectedIndex="{Binding ElementName=CharactorList, Path=SelectedItem.FirstJob, Converter={StaticResource CharactorJobConverter}}"/>
                            <Label Grid.Row="5" Content="SecondJob"/>
                            <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding Info.Jobs}" DisplayMemberPath="Name"
                                      SelectedIndex="{Binding ElementName=CharactorList, Path=SelectedItem.SecondJob, Converter={StaticResource CharactorJobConverter}}"/>
                            <Label Grid.Row="6" Content="JobPoint"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.JobPoint, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="7" Content="HP+"/>
                            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.HP, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="8" Content="MP+"/>
                            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.MP, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="9" Content="BP+"/>
                            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.BP, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="10" Content="SP+"/>
                            <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.SP, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="11" Content="ATK+"/>
                            <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.ATK, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="12" Content="DEF+"/>
                            <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.DEF, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="13" Content="MATK+"/>
                            <TextBox Grid.Row="13" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.MATK, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="14" Content="MDEF+"/>
                            <TextBox Grid.Row="14" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.MDEF, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="15" Content="ACC+"/>
                            <TextBox Grid.Row="15" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.ACC, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="16" Content="EVA+"/>
                            <TextBox Grid.Row="16" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.EVA, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="17" Content="CON+"/>
                            <TextBox Grid.Row="17" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.CON, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Grid.Row="18" Content="AGI+"/>
                            <TextBox Grid.Row="18" Grid.Column="1" Text="{Binding ElementName=CharactorList, Path=SelectedItem.AGI, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="15"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition Height="7*"/>
                            </Grid.RowDefinitions>
                            <Label Content="{x:Static properties:Resources.ItemSword}"/>
                            <Label Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Sword, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Column="2" Content="..." Click="ButtonSword_Click"/>
                            <Label Grid.Row="1" Content="{x:Static properties:Resources.ItemLance}"/>
                            <Label Grid.Row="1" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Lance, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="1" Grid.Column="2" Content="..." Click="ButtonLance_Click"/>
                            <Label Grid.Row="2" Content="{x:Static properties:Resources.ItemDagger}"/>
                            <Label Grid.Row="2" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Dagger, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="2" Grid.Column="2" Content="..." Click="ButtonDagger_Click"/>
                            <Label Grid.Row="3" Content="{x:Static properties:Resources.ItemAxe}"/>
                            <Label Grid.Row="3" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Axe, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="3" Grid.Column="2" Content="..." Click="ButtonAxe_Click"/>
                            <Label Grid.Row="4" Content="{x:Static properties:Resources.ItemBow}"/>
                            <Label Grid.Row="4" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Bow, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="4" Grid.Column="2" Content="..." Click="ButtonBow_Click"/>
                            <Label Grid.Row="5" Content="{x:Static properties:Resources.ItemRod}"/>
                            <Label Grid.Row="5" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Rod, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="5" Grid.Column="2" Content="..." Click="ButtonRod_Click"/>
                            <Label Grid.Row="6" Content="{x:Static properties:Resources.ItemShield}"/>
                            <Label Grid.Row="6" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Shield, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="6" Grid.Column="2" Content="..." Click="ButtonShield_Click"/>
                            <Label Grid.Row="7" Content="{x:Static properties:Resources.ItemHead}"/>
                            <Label Grid.Row="7" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Head, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="7" Grid.Column="2" Content="..." Click="ButtonHead_Click"/>
                            <Label Grid.Row="8" Content="{x:Static properties:Resources.ItemBody}"/>
                            <Label Grid.Row="8" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Body, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="8" Grid.Column="2" Content="..." Click="ButtonBody_Click"/>
                            <Label Grid.Row="9" Content="{x:Static properties:Resources.ItemAccessory1}"/>
                            <Label Grid.Row="9" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Accessory1, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="9" Grid.Column="2" Content="..." Click="ButtonAccessory1_Click"/>
                            <Label Grid.Row="10" Content="{x:Static properties:Resources.ItemAccessory2}"/>
                            <Label Grid.Row="10" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Accessory2, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="10" Grid.Column="2" Content="..." Click="ButtonAccessory2_Click"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemItems}" VerticalAlignment="Bottom">
                    <TabItem.Resources>
                        <local:ItemNameConverter x:Key="ItemNameConverter"/>
                        <local:Boolean2VisibilityConverter x:Key="Boolean2VisibilityConverter"/>
                    </TabItem.Resources>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="  ID"/>
                            <Label Grid.Column="1" Content="  Name"/>
                            <Label Grid.Column="2" Content=" Count"/>
                        </Grid>
                        <ListBox Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Items}"
                                 VirtualizingStackPanel.VirtualizationMode="Recycling"
                                 VirtualizingStackPanel.IsVirtualizing="True"
                                 ScrollViewer.CanContentScroll="True"
                                 VirtualizingPanel.ScrollUnit="Pixel">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <VirtualizingStackPanel Orientation="Horizontal">
                                        <Label Content="{Binding ID}" Width="50"/>
                                        <Label Content="{Binding ID, Converter={StaticResource ItemNameConverter}}" Width="300"/>
                                        <TextBox Text="{Binding Count, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                                        <Button Content=" ... " Click="ButtonItem_Click"
                                                Visibility="{Binding CanChangeID, Converter={StaticResource Boolean2VisibilityConverter}}"
                                                ToolTipService.InitialShowDelay="300" ToolTipService.ShowDuration="15000">
                                            <Button.ToolTip>
                                                <ToolTip HorizontalOffset="10">
                                                    <TextBlock TextWrapping="Wrap" Width="350" Text="{x:Static properties:Resources.TabItemItemsTip}" />
                                                </ToolTip>
                                            </Button.ToolTip>
                                        </Button>
                                    </VirtualizingStackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </Grid>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemItemInventory}" Name="TabItemItemInventory" VerticalAlignment="Bottom">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ListView Grid.Column="0" ItemsSource="{Binding BasicData.ItemInventoryStates}"
                                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  ScrollViewer.CanContentScroll="True">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="50"/>
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="235"/>
                                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding TypeName}" Width="85"/>
                                    <GridViewColumn Header="#" DisplayMemberBinding="{Binding Order}" Width="35"/>
                                    <GridViewColumn Header="Count" Width="50">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding ItemCount}" IsChecked="{Binding IsOwned, Mode=OneWay}" IsEnabled="False"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="ðŸ†" Width="30">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsGot, Mode=OneWay}" IsEnabled="False" HorizontalContentAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ListView Grid.Row="0" ItemsSource="{Binding BasicData.ItemInventoryTypeStates}"
                                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  ScrollViewer.CanContentScroll="True">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="120"/>
                                        <GridViewColumn Header="Count" DisplayMemberBinding="{Binding Count}" Width="65"/>
                                        <GridViewColumn Header="ðŸ†" Width="70">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox Content="{Binding Progress}" IsChecked="{Binding IsCompleted, Mode=OneWay}" IsEnabled="False"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <TextBlock Grid.Row="1" TextWrapping="Wrap" Text="{x:Static properties:Resources.TabItemItemInventoryTip}" VerticalAlignment="Bottom"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemPlaces}" VerticalAlignment="Top">
                    <ListBox Grid.Column="0" ItemsSource="{Binding Places}"
                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             ScrollViewer.CanContentScroll="True"
                             VirtualizingPanel.ScrollUnit="Pixel">
                        <ListBox.ItemContainerStyle>
                            <Style  TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                            <ContentPresenter
                                                  Content="{TemplateBinding Content}"
                                                   ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                                   ContentTemplate="{TemplateBinding ContentTemplate}" />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal" Background="{Binding Info.BgColor}">
                                    <CheckBox Content="{Binding Info.Value}" IsChecked="{Binding Visit}" Width="50" VerticalAlignment="Center"/>
                                    <Label>
                                        <TextBlock Text="{Binding Info.Name}" Foreground="{Binding Info.NameColor}"/>
                                    </Label>
                                </VirtualizingStackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemTreasure}">
                    <ListView ItemsSource="{Binding TreasureStates}"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              ScrollViewer.CanContentScroll="True"
                              VirtualizingPanel.ScrollUnit="Pixel">
                        <ListView.Resources>
                            <local:Num2VisibilityConverter x:Key="Num2VisibilityConverter"/>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn DisplayMemberBinding="{Binding Info.Value}" Header="ID" Width="65"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Info.Name}" Header="Name" Width="220"/>
                                <GridViewColumn Width="85">
                                    <GridViewColumnHeader Click="MenuItemTreasureStateProgress_Click">
                                        <TextBlock Text="{x:Static properties:Resources.TreasureStatesSummation}" FontWeight="Bold"/>
                                        <GridViewColumnHeader.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Name="MenuItemTreasureStateAll" Header="All" Click="MenuItemTreasureStateAll_Click"/>
                                                <MenuItem Name="MenuItemTreasureStateCompleted" Header="Completed"  Click="MenuItemTreasureStateCompleted_Click"/>
                                                <MenuItem Name="MenuItemTreasureStateUncompleted" Header="Uncompleted"  Click="MenuItemTreasureStateUncompleted_Click"/>
                                            </ContextMenu>
                                        </GridViewColumnHeader.ContextMenu>
                                    </GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding SummationProgress}"
                                                      IsChecked="{Binding IsCollectAll, Mode=OneWay}" IsEnabled="False"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="{x:Static properties:Resources.TreasureStatesChest}" Width="85">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding ChestProgress}" IsChecked="{Binding IsCollectChest, Mode=OneWay}" IsEnabled="False"
                                                      Visibility="{Binding Info.Chest, Converter={StaticResource Num2VisibilityConverter}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="{x:Static properties:Resources.TreasureStatesHiddenItem}" Width="85">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding HiddenItemProgress}" IsChecked="{Binding IsCollectHiddenItem, Mode=OneWay}" IsEnabled="False"
                                                      Visibility="{Binding Info.HiddenItem, Converter={StaticResource Num2VisibilityConverter}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Value}" Header="VALUE" Width="165"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemWeak}">
                    <ListView ItemsSource="{Binding EnemyWeaknesses}"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              ScrollViewer.CanContentScroll="True">
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn Width="65">
                                    <GridViewColumnHeader Click="MenuItemWeakProgress_Click">
